<h2>回答一覧</h2>

<div class="col-md-8 ml-3">
  <table class="table table-striped table-hover">
    <thead class="thead-light">
      <tr>
        <th>患者ID</th>
        <th>氏名</th>
        <th></th>
        <th>回答日時</th>
      </tr>
    </thead>
  
    <tbody>
      <% @answers.each do |answer| %>
      <tr>
        <td><%= answer.user_id %></td>
        <td style="width:10%"><%= answer.user.last_name %></td>
        <td style="width:10%"><%= answer.user.first_name %></td>
        <td>
          <%= link_to admin_answer_path(answer) do %>
            <%= answer.created_at %>
          <% end %>
        </td>
      </tr>
      <%  end %>
    </tbody>
  </table>
</div> 
