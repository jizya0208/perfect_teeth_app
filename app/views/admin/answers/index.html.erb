<div class="col-md-6 offset-md-2 ">
<h5>回答一覧</h5>
  <table class="table table-striped table-hover">
    <thead class="thead-light">
      <tr>
        <th>患者ID</th>
        <th>氏名</th>
        <th>回答日時</th>
        <th></th>
      </tr>
    </thead>
  
    <tbody>
      <% @answers.each do |answer| %>
      <tr>
        <td><%= answer.user_id %></td>
        <td><%= link_to (answer.user.last_name + "　" + answer.user.first_name), admin_user_path(answer.user_id) %></td>
        <td>
          <%= link_to user_admin_answer_path(answer.user_id, answer) do %>
            <%= answer.created_at.strftime('%Y/%m/%d  %H:%M') %>
          <% end %>
        </td>
        <td>
          <%= link_to '削除', user_admin_answer_path(answer.user_id, answer), method: :delete, "data-confirm" => "本当に削除しますか？", class:"btn btn-sm" %>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
  <%= paginate @answers %>
</div> 
