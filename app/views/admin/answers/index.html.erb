<div class="col-md-6 offset-md-2 ">
<h5>回答一覧</h5>
  <table class="table table-striped table-hover">
    <thead class="thead-light">
      <tr>
        <th>患者ID</th>
        <th>氏名</th>
        <th></th>
        <th>回答日時</th>
      </tr>
    </thead>
  
    <tbody>
      <% @answers.each do |answer| %>
      <tr>
        <td><%= answer.user_id %></td>
        <td style="width:15%"><%= answer.user.last_name %></td>
        <td style="width:15%"><%= answer.user.first_name %></td>
        <td>
          <%= link_to user_admin_answer_path(answer.user_id, answer) do %>
            <%= answer.created_at.strftime('%Y/%m/%d  %H:%M') %>
          <% end %>
        </td>
      </tr>
      <%  end %>
    </tbody>
  </table>
</div> 
